{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Next.js: Debug Client",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000", // Or your application's port
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true
        },
        {
            "name": "Next.js: Debug Server",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "dev"],
            "port": 9229, // Default Node.js inspect port
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "sourceMaps": true
        }
    ]
}
